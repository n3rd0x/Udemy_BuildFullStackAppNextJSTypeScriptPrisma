// Define data source.
datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// Define client (development).
generator client {
  provider = "prisma-client-js"
}

// Define models.
model Category {
  id    Int    @id @default(autoincrement())
  name  String
  rooms Room[]
}

model Role {
  id    Int    @id @default(autoincrement())
  name  String
  users User[]
}

model Image {
  id    Int    @id @default(autoincrement())
  name  String
  url   String @unique
  users User[]
  rooms Room[]
}

model Reviews {
  id      Int    @id @default(autoincrement())
  user    User   @relation(fields: [userId], references: [id])
  userId  Int
  name    String
  rating  Int
  comment String
}

model User {
  id                   Int       @id @default(autoincrement())
  name                 String
  email                String    @unique
  password             String
  avatar               Image     @relation(fields: [avatarId], references: [id])
  avatarId             Int
  role                 Role      @relation(fields: [roleId], references: [id])
  roleId               Int
  createdAt            DateTime  @default(now())
  resetPasswordToken   String?
  resetPasswordExpired DateTime?
  Reviews              Reviews[]
}

model Room {
  id            Int      @id @default(autoincrement())
  name          String
  pricePerNight Float    @default(0.0)
  description   String
  address       String
  guestCapacity Int
  numOfBed      Int
  internet      Boolean? @default(false)
  breakfast     Boolean? @default(false)
  airConitioned Boolean? @default(false)
  petsAllowed   Boolean? @default(false)
  roomCleaning  Boolean? @default(false)
  rating        Int?     @default(0)
  numOfReviews  Int?     @default(0)
  images        Image[]
  category      Category @relation(fields: [categoryId], references: [id])
  categoryId    Int
}
